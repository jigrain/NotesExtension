{
  "manifest_version": 2,
  "name": "Notes Popup Extension",
  "version": "1.0",
  "description": "React application as a browser extension",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Notes",
    "default_icon": 
    {
      "16": "icon/notebook-pen-icon.svg",
      "24": "icon/notebook-pen-icon.svg",
      "48": "icon/notebook-pen-icon.svg",
      "96": "icon/notebook-pen-icon.svg"
    }
  },
  "icons": { "16": "icon/notebook-pen-icon.svg", "48": "icon/notebook-pen-icon.svg", "128": "icon/notebook-pen-icon.svg" },
  "permissions": ["storage"]
}
